{
  "name": "chalkboard",
  "version": "1.0.0",
  "description": "Collection of bouldering exercises and drills.",
  "scripts": {
    "build": "node ./build/index.js",
    "build:watch": "npx nodemon --watch build --watch src --watch data -e html,css,js,json,handlebars ./build/index.js",
    "serve": "npx http-server -c-1 -o",
    "dev": "npx concurrently \"npm run build:watch\" \"npm run serve\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "npx prettier --write ."
  },
  "keywords": [],
  "author": "JanMalch",
  "license": "UNLICENSED",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/html-minifier": "^4.0.6",
    "ajv": "^8.17.1",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.3",
    "handlebars": "^4.7.8",
    "html-minifier": "^4.0.0",
    "http-server": "^14.1.1",
    "nodemon": "^3.1.11",
    "prettier": "^3.8.1"
  },
  "dependencies": {
    "@fontsource/roboto-mono": "^5.2.8",
    "comparing": "^1.3.1",
    "modern-normalize": "^3.0.1"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  }
}
